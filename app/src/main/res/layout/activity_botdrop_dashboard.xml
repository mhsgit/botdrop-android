<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/botdrop_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Update Banner (hidden by default) -->
        <LinearLayout
            android:id="@+id/update_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/update_banner_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update available"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/botdrop_accent"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_update_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Download"
                    android:textAllCaps="false"
                    android:background="@drawable/botdrop_button_bg"
                    android:textColor="#1A1A1A"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_update_dismiss"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Dismiss"
                    android:textAllCaps="false"
                    android:background="@drawable/botdrop_button_outline_bg"
                    android:textColor="@color/botdrop_accent" />
            </LinearLayout>
        </LinearLayout>

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/botdrop_logo"
                android:contentDescription="BotDrop"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BotDrop"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/botdrop_on_background" />
        </LinearLayout>

        <!-- Gateway Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <!-- Status indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/status_indicator_stopped" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Gateway Stopped"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/botdrop_on_background" />
                </LinearLayout>

                <!-- Uptime -->
                <TextView
                    android:id="@+id/uptime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â€”"
                    android:textSize="14sp"
                    android:textColor="@color/botdrop_secondary_text" />

                <!-- OpenClaw version + check button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/openclaw_version_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="13sp"
                        android:textColor="@color/botdrop_secondary_text" />

                    <TextView
                        android:id="@+id/btn_check_openclaw_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check for updates"
                        android:textSize="13sp"
                        android:textColor="@color/botdrop_accent"
                        android:paddingStart="8dp"
                        android:paddingEnd="0dp" />

                    <TextView
                        android:id="@+id/btn_view_openclaw_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View log"
                        android:textSize="13sp"
                        android:textColor="@color/botdrop_accent"
                        android:paddingStart="12dp"
                        android:paddingEnd="0dp" />
                </LinearLayout>
        </LinearLayout>

        <!-- Startup Notice -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First interaction can take 2-3 minutes while the agent warms up."
                android:textSize="13sp"
                android:textColor="@color/botdrop_secondary_text" />
        </LinearLayout>

        <!-- Gateway Error Banner (hidden by default) -->
        <LinearLayout
            android:id="@+id/gateway_error_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Gateway issue detected"
                android:textColor="@color/status_disconnected"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gateway_error_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€”"
                android:textColor="@color/botdrop_secondary_text"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Channel Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Channels"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/botdrop_secondary_text"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/telegram_channel_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“± Telegram"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_on_background" />

                    <TextView
                        android:id="@+id/telegram_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â— Connected"
                        android:textSize="14sp"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discord_channel_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¬ Discord"
                        android:textSize="16sp"
                        android:textColor="@color/botdrop_on_background" />

                    <TextView
                        android:id="@+id/discord_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â—‹ â€”"
                        android:textSize="14sp"
                        android:textColor="@color/botdrop_secondary_text" />
                </LinearLayout>
        </LinearLayout>

        <!-- Current Model Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Model"
            android:textSize="14sp"
            android:textColor="@color/botdrop_secondary_text"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/botdrop_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/current_model_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€”"
                    android:textSize="16sp"
                    android:textColor="@color/botdrop_primary_text"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_change_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Model"
                    android:background="@drawable/botdrop_button_outline_bg"
                    android:textColor="@color/botdrop_accent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="â–¶ Start"
                android:textAllCaps="false"
                android:background="@drawable/botdrop_button_bg"
                android:textColor="#1A1A1A"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="â¹ Stop"
                android:textAllCaps="false"
                android:background="@drawable/botdrop_button_outline_bg"
                android:textColor="@color/botdrop_accent" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="ðŸ”„ Restart"
            android:textAllCaps="false"
            android:background="@drawable/botdrop_button_bg"
            android:textColor="#1A1A1A"
            android:textStyle="bold" />

        <!-- Guidance Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tip"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/botdrop_secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat with BotDrop on your connected channel to configure more settings, add channels, or change models."
                    android:textSize="14sp"
                    android:textColor="@color/botdrop_on_background" />
        </LinearLayout>

        <!-- SSH Info Card -->
        <LinearLayout
            android:id="@+id/ssh_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            android:background="@drawable/botdrop_card_bg"
            android:orientation="vertical"
            android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SSH Access"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/botdrop_secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ssh_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:textColor="@color/botdrop_on_background" />
        </LinearLayout>

        <!-- Terminal Button -->
        <Button
            android:id="@+id/btn_open_terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ–¥ Open Terminal"
            android:textAllCaps="false"
            android:background="@drawable/botdrop_button_outline_bg"
            android:textColor="@color/botdrop_accent" />
    </LinearLayout>
</ScrollView>
