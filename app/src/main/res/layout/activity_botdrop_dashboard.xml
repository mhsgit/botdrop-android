<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/botdrop_logo"
                android:contentDescription="BotDrop"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BotDrop"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary" />
        </LinearLayout>

        <!-- Gateway Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Status indicator -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:background="@drawable/status_indicator_stopped" />

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Gateway Stopped"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="?android:attr/textColorPrimary" />
                </LinearLayout>

                <!-- Uptime -->
                <TextView
                    android:id="@+id/uptime_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="â€”"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Channel Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Channels"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/telegram_channel_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“± Telegram"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/telegram_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â— Connected"
                        android:textSize="14sp"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discord_channel_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ’¬ Discord"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorPrimary" />

                    <TextView
                        android:id="@+id/discord_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â—‹ â€”"
                        android:textSize="14sp"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="â–¶ Start"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="â¹ Stop"
                android:textAllCaps="false" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="ðŸ”„ Restart"
            android:textAllCaps="false" />

        <!-- Guidance Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tip"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat with BotDrop on your connected channel to configure more settings, add channels, or change models."
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SSH Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/ssh_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SSH Access"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/ssh_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="monospace"
                    android:textColor="?android:attr/textColorPrimary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Terminal Button -->
        <Button
            android:id="@+id/btn_open_terminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ–¥ Open Terminal"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle" />
    </LinearLayout>
</ScrollView>
