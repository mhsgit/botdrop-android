<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?android:attr/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step 3/3"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect a Chat Platform"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_marginBottom="24dp" />

        <!-- Mode Selection -->
        <LinearLayout
            android:id="@+id/channel_mode_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose setup method:"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="16dp" />

            <!-- Option 1: SetupBot -->
            <RadioButton
                android:id="@+id/channel_mode_setupbot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="â­ Use @BotDropSetupBot (easy)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   Guided setup with automatic user ID detection"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="16dp" />

            <!-- Option 2: Manual -->
            <RadioButton
                android:id="@+id/channel_mode_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Set up manually"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   I have a bot token and user ID ready"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/channel_mode_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textSize="16sp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- SetupBot Flow -->
        <LinearLayout
            android:id="@+id/channel_setupbot_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Setup via @BotDropSetupBot"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Which platform?"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="12dp" />

            <RadioButton
                android:id="@+id/channel_setupbot_telegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="ðŸ“± Telegram"
                android:textSize="16sp"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/channel_setupbot_discord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="ðŸ’¬ Discord"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/channel_setupbot_open"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open @BotDropSetupBot"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="After setup, paste your code below:"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/channel_setupbot_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="OWLIA-xxxxxxxxxxxx"
                android:inputType="text"
                android:padding="12dp"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/channel_setupbot_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect &amp; Start"
                android:textSize="16sp"
                android:padding="16dp" />
        </LinearLayout>

        <!-- Manual Flow -->
        <LinearLayout
            android:id="@+id/channel_manual_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manual Setup"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Platform"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/channel_manual_telegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="ðŸ“± Telegram"
                android:textSize="16sp"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <RadioButton
                android:id="@+id/channel_manual_discord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="ðŸ’¬ Discord"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bot Token"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/channel_manual_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="123456:ABC-DEF..."
                android:inputType="text"
                android:padding="12dp"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your User ID (owner)"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/channel_manual_owner_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="987654321"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/channel_manual_connect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect &amp; Start"
                android:textSize="16sp"
                android:padding="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
