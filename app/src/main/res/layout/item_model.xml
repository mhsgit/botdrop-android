<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/model_selector_row_bg"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true">

    <View
        android:id="@+id/model_section_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:alpha="0.25"
        android:background="@color/botdrop_secondary_text"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/model_badge"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/botdrop_background"
            android:background="@drawable/model_selector_badge_bg"
            android:contentDescription="Model badge" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/botdrop_on_background" />

            <TextView
                android:id="@+id/model_meta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/botdrop_secondary_text" />
        </LinearLayout>

        <TextView
            android:id="@+id/model_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="â€º"
            android:textSize="20sp"
            android:textColor="@color/botdrop_accent"
            android:contentDescription="Open" />
    </LinearLayout>

</LinearLayout>
